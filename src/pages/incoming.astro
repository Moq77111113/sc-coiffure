---
import "@fontsource-variable/inter";
import Countdown from "~/components/atoms/Countdown.svelte";
import Footer from "~/components/organisms/Footer.astro";
import { seo } from "~/constants/seo";
import { social } from "~/constants/social";
import "~/styles/index.css";
import "~/styles/md.css";
interface Props {
  index?: boolean;
  title?: string;
  description?: string;
}
const {
  index = true,
  title = seo.title,
  description = seo.description,
} = Astro.props;
const { generator, site, url } = Astro;

const image = new URL("social.jpg", site);
const canonical = new URL(url.pathname, site);

const schema = JSON.stringify(
  {
    "@context": "http://schema.org",
    "@type": "LocalBusiness",
    name: title,
    description: description,
    image: image,
    url: canonical,
    sameAs: [social.facebook, social.instagram],
  },
  null,
  2
);
---

<!DOCTYPE html>
<html
  lang="fr"
  class="h-full font-display motion-safe:scroll-smooth"
  data-theme="dark"
>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="/favicon.ico" type="image/ico" />
    <meta name="generator" content={generator} />
    <meta name="robots" content={index ? "index" : "noindex"} />
    <title>{title}</title>

    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />

    <!-- social media -->
    <meta property="og:title" content={title} />
    <meta property="og:type" content="website" />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:url" content={site} />
    <meta name="twitter:card" content="summary_large_image" />
    <script type="application/ld+json" set:html={schema} />
  </head>
  <body
    class="flex h-screen flex-col items-center justify-center bg-primary text-center font-display text-white"
  >
    <h1 class="font-bold text-2xl">On arrive bientôt !</h1>
    <p class="mt-4 text-lg">On travaille sur quelque chose d'incroyable !</p>

    <div class="mt-8 flex flex-col">
      <form
        action="#"
        method="post"
        class="flex items-center justify-center"
        data-netlify="true"
        netlify-honeypot="bot-field"
      >
        <input
          type="email"
          name="email"
          placeholder="Entrez votre email"
          class="rounded-l-md border bg-white px-4 py-2 text-black placeholder-gray-400 text-xs focus:outline-none"
          required
        />
        <input class="hidden" name="anti-bot" />
        <button
          type="submit"
          class="rounded-r-md border bg-primary px-4 py-2 text-white hover:bg-accent focus:outline-none"
          >S'inscrire</button
        >
      </form>
    </div>
    <p class="mt-2 text-sm">
      Soyez les premiers à être informés de notre lancement !
    </p>
  </body>
  <Countdown client:load />
  <footer class="absolute bottom-0 flex w-full flex-col bg-black p-2 text-xs">
    SC Coiffure © 2023
    <a href="mailto:contact@sccoiffure83.fr">contact@sccoiffure83.fr</a>
  </footer>
</html>

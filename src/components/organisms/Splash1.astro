---
import HeroImage from "~/components/atoms/HeroImage1.astro";
import ScheduleTemplate from "~/components/molecules/Schedule1.svelte";
import Contact from "~/components/molecules/Contact1.svelte";
import { schedule } from "~/constants/schedule";
import FindUs from "~/components/molecules/FindUs1.svelte";
---

<section class="relative h-full bg-black py-32">
  <div class="absolute inset-0 block opacity-70">
    <HeroImage />
  </div>
  <div
    class="relative flex h-full flex-col items-center justify-between gap-8 sm:justify-center sm:gap-32"
  >
    <h2 class="flex flex-col gap-2 sm:gap-4 sm:self-auto sm:justify-self-end">
      <div class="text-center font-thin tracking-tighter text-gray-50 text-6xl">
        Bienvenue chez <br />
        <span class="text-6xl">SC Coiffure</span>
      </div>
    </h2>

    <div class="flex max-w-xl flex-col gap-4 sm:max-w-3xl sm:flex-row">
      <ScheduleTemplate {schedule} client:idle />
      <FindUs />
      <Contact />
    </div>
  </div>
</section>

<style>
  @keyframes float {
    0% {
      transform: translate3d(0, 0, 0);
    }

    100% {
      transform: translate3d(0, 30px, 0);
    }
  }

  #floating {
    animation: float linear 2.5s infinite alternate;
  }

  @media (prefers-reduced-motion: reduce) {
    #floating {
      @apply animate-none;
    }

    #splash-bg-fallback {
      @apply block;
    }
  }
</style>

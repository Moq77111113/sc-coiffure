---
import { Icon } from 'astro-icon/components';
import type { FooterLink } from '~/types';
interface Props {
  links: Array<FooterLink>;
}
const { links } = Astro.props;
---

<ul class="relative grid grid-cols-4 gap-4">
  {
    links.map((link) => (
      <li>
        <a
          class="flex h-14 w-14 items-center justify-center rounded-full border-2 border-current p-3"
          href={link.url}
          target="_blank"
          rel="noopener, noreferrer"
        >
          <span class="sr-only">{link.description}</span>
          <Icon class="size-full" name={link.icon} />
        </a>
      </li>
    ))
  }
</ul>

---
import { Image } from 'astro:assets';
import ContentSection from '~/components/molecules/ContentSection.astro';

import ghd from '~/assets/products/ghd.png';
import loreal from '~/assets/products/loreal.png';
import subtil from '~/assets/products/subtil.png';
import Link from '~/components/atoms/Link.svelte';

const products = [
  {
    name: "L'Or√©al",
    image: loreal,
    href: 'https://www.lorealprofessionnel.fr/',
  },
  {
    name: 'GHD',
    image: ghd,
    href: 'https://www.ghdhair.com/fr',
  },
  { name: 'Subtil', image: subtil, href: 'https://www.subtil.fr/' },
];
---

<ContentSection id="products">
  <Fragment slot="title">
    <h2 class=`text-center font-extrabold tracking-tight text-6xl text-default`>
      Nos produits
    </h2>
  </Fragment>
  <ul
    class="flex w-full flex-col items-center justify-center gap-24 sm:flex-row sm:px-8"
  >
    {
      products.map((_) => (
        <li>
          <Link href={_.href} newTab title={_.name}>
            <Image
              class="pointer-events-none h-full w-full rounded-md object-cover dark:invert"
              src={_.image}
              alt={_.name}
              width={_.image.width / 2}
              densities={[1.5, 2]}
              sizes="(min-width: 0px) and (max-width: 480px) 480px, (min-width: 481px) 600px, 100vw"
              quality={'hight'}
              format="png"
            />
          </Link>
        </li>
      ))
    }
  </ul>
</ContentSection>

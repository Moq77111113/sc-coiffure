---
import type { FooterLink } from '~/types';
import SocialList from '~/components/molecules/SocialList.astro';
import Link from '~/components/atoms/Link.svelte';

import { social } from '~/constants/social';
import { companyName } from '~/constants';
const links: Array<FooterLink> = [
  {
    url: social.instagram,
    description: 'Instagram',
    icon: 'uil:instagram-alt',
  },
  {
    url: social.facebook,
    description: 'Facebook',
    icon: 'mdi:facebook',
  },
  {
    url: `mailto:${social.email}`,
    description: 'Email',
    icon: 'mdi:email',
  },
  {
    url: `tel:${social.phone}`,
    description: 'Appelez-nous',
    icon: 'mdi:phone',
  },
];

const currentYear = new Date().getFullYear()
---

<footer
  class="relative flex h-64 items-center justify-center bg-black text-white"
>
  <div
    class="absolute inset-0 flex flex-col items-center justify-center overflow-hidden"
  >
    <div class="absolute bottom-4 px-6 text-center text-xs">
      <p>{companyName} © {currentYear} Tous droits réservés</p>
      <Link href="/legal#content">Mentions Légales</Link> -
      <Link href="/privacy#content">Politique de confidentialité</Link>
    </div>
  </div>
  <SocialList links={links} />
</footer>

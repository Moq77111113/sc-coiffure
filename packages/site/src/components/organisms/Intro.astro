---
import { Icon } from 'astro-icon';
import ContentSection from '~/components/molecules/ContentSection.astro';
import { companyName } from '~/constants/seo';

type CTAElement = {
  label: string;
  href: string;
  icon: {
    pack: string;
    name: string;
  };
};

const ctas: CTAElement[] = [
  {
    label: 'Découvrir nos services',
    href: '/#services',
    icon: {
      pack: 'mdi',
      name: 'scissors',
    },
  },
  {
    label: 'Découvrir nos produits',
    href: '/#products',
    icon: {
      pack: 'mdi',
      name: 'lotion',
    },
  },
  // {
  //   label: 'Explorer nos travaux',
  //   href: '#gallery',
  //   icon: {
  //     pack: 'mdi',
  //     name: 'image',
  //   },
  // },
];
---

<ContentSection id="intro">
  <Fragment slot="title">
    <h2 class=`text-center font-extrabold tracking-tight text-6xl text-display`>
      {companyName}
    </h2>
  </Fragment>

  <Icon slot="eyebrow" name="logomark" class="text-default h-48" />
  <div class="container">
    <div class="flex flex-col items-center gap-4">
      <p class="text-text max-w-xl text-center text-sm">
        Adoptez la <span class="text-accent">SC attitude</span> pour sublimer votre
        style ! Séverine et Cécile vous accueillent chaleureusement dans leur salon,
        situé sur le port de
        <span class="text-accent">La Seyne-sur-Mer</span>, alliant <span
          class="text-accent">expertise</span
        > et <span class="text-accent">convivialité</span>. 
      </p>
    </div>
  </div>

  <div class="text-offset grid grid-cols-1 gap-2 sm:grid-cols-2">
    {
      ctas.map((cta, i) => (
        <a
          href={cta.href}
          class={`border-default text-default flex items-center justify-center gap-3 border-2 px-6 py-4 dark:border-white ${
            ctas.length % 2 !== 0 && i === ctas.length - 1
              ? 'sm:col-span-2 sm:mx-auto'
              : ''
          }`}
        >
          <Icon pack={cta.icon.pack} name={cta.icon.name} class="h-10" />
          <span class="m-auto  text-center font-medium">{cta.label}</span>
        </a>
      ))
    }
  </div>
</ContentSection>

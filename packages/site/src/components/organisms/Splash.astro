---
import HeroImage from '~/components/atoms/HeroImage.astro';
import ScheduleTemplate from '~/components/molecules/Schedule.svelte';
import Contact from '~/components/molecules/Contact.svelte';
import { schedule } from '~/constants/schedule';
import FindUs from '~/components/molecules/FindUs.svelte';
---

<section class="relative h-full bg-black py-32">
  <div class="absolute inset-0 block opacity-70">
    <HeroImage />
  </div>
  <div
    class="relative flex h-full flex-col items-center justify-between gap-8 sm:justify-center sm:gap-32"
  >
    <div class="flex flex-col gap-2 sm:gap-4 sm:self-auto sm:justify-self-end">
      <h1 class="text-center font-thin tracking-tighter text-gray-50 text-6xl">
        Bienvenue chez <br />
        <span class="text-6xl">SC Coiffure</span>
      </h1>
    </div>

    <div class="flex max-w-xl flex-col gap-4 sm:mx-8 sm:max-w-3xl sm:flex-row">
      <ScheduleTemplate {schedule} client:idle />
      <FindUs />
      <Contact />
    </div>
  </div>
</section>
